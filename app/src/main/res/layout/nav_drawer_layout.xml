<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:padding="15dp"
    android:background="@color/drawer_header_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/headerImageView"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:srcCompat="@drawable/profile_image_placeholder" />

    <TextView
        android:id="@+id/headerNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_name_logged_out"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/headerEmailTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_email_logged_out"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/white"/>



</LinearLayout>